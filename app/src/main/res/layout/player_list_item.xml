<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_player_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorPrimaryDark"/>

    <ImageView
        android:id="@+id/iv_decrement_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/decrement_circle_outline"/>

    <TextView
        android:id="@+id/tv_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>

    <ImageView
        android:id="@+id/iv_increment_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/increment_circle_outline"/>


</LinearLayout>